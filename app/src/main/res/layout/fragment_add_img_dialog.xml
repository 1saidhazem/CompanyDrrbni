<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_8sdp"
    app:cardUseCompatPadding="true"
    tools:context=".AddImgDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/basic"
        android:orientation="vertical"
        android:padding="@dimen/_24sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_sans_arabic_regular"
            android:text="@string/add_img"
            android:textColor="@color/white"
            android:textSize="@dimen/_24sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_take_picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="@string/take_picture"
                style="@style/blue_btn"
                android:layout_marginRight="@dimen/_8sdp"/>

            <Button
                android:id="@+id/btn_Choose_from_the_library"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="@string/Choose_from_the_library"
                style="@style/blue_btn"
                android:backgroundTint="@color/purple"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_8sdp"/>

            <Button
                android:id="@+id/btn_chancel"
                android:layout_height="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:text="@string/chancel"
                android:backgroundTint="@color/btn_cancel"
                style="@style/blue_btn"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_8sdp"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>