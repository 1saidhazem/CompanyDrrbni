<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Drrbni" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/basic</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="onboarding_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_32sdp</item>
    </style>

    <style name="onboarding_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_48sdp</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textSize">@dimen/_32sdp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_arabic_regular</item>
    </style>

    <style name="onboarding_subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:textColor">@color/subtitle_text</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_arabic_regular</item>
    </style>

    <style name="blue_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_52sdp</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_arabic_regular</item>
    </style>

    <style name="toolbarTitle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/_32sdp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_arabic_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">@dimen/_24sdp</item>
    </style>

    <style name="editText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_52sdp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_arabic_regular</item>
        <item name="android:textColor">@color/basic</item>
        <item name="android:layout_marginRight">@dimen/_24sdp</item>
        <item name="android:layout_marginLeft">@dimen/_24sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:paddingRight">@dimen/_16sdp</item>
        <item name="android:paddingLeft">@dimen/_16sdp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:elevation">@dimen/_8sdp</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>